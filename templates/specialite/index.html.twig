{% extends 'base.html.twig' %}

{% block title %}
Hello
{{ controller_name }}
!
{% endblock %}

{% block body %}
<style>
.example-wrapper {
	margin: 1em auto;
	max-width: 800px;
	width: 95%;
	font: 18px/1.5 sans-serif;
}

.example-wrapper code {
	background: #F5F5F5;
	padding: 2px 6px;
}
</style>

<div class="example-wrapper">
	<h1>
		Hello
		{{ controller_name }}
		! ✅
	</h1>

	This friendly message is coming from:
	<ul>
		<li>Your controller at <code>
				<a
					href="{{ 'src/Controller/SpecialiteController.php'|file_link(0) }}">src/Controller/SpecialiteController.php</a>
			</code></li>
		<li>Your template at <code>
				<a href="{{ 'templates/specialite/index.html.twig'|file_link(0) }}">templates/specialite/index.html.twig</a>
			</code></li>
	</ul>
</div>

<div>
	
	{% for specialite in specialites %}
		Etablissement :
	    {{ specialite.etablissement.nom }}
		
		<br /> Code logistique :
	    {{ specialite.codeLogistique }}
		<br /> Adulte ou Pediatrie ?
	    
	    {% if specialite.adulte == 1 %}
			<p>Adulte</p>
	    {% endif %}

	    {% if specialite.pediatrie == 1 %}
			<p>Pediatrie</p>
	    {% endif %}

		Service :
	   	{{ specialite.service }}
	   	
	   	
{# 	   	Evenements liés à la spécialité :#}
		<hr>
	
	{% endfor %}

</div>
{% endblock %}
