<div id="ajax_type_produit_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Ajout d'un nouveau type de produit
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
        {{ form_row(form.nom) }}
    </div>
    <div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	
	{{ form_rest(form) }}
    {{ form_errors(form) }}
    {{ form_end(form) }}
</div>

{% block javascripts %}

    <script type="text/javascript">

    	$(document).ready(function() {

            $('#modal_add_produit').modal({
     		   'show' : true,
     		   'backdrop' : 'static'
     		});

            var url = '{{path('type_produit_ajax_add') }}';
    		TypeProduit.EventAddSubmit(url);
    		
    	});
    </script> 

{% endblock %}