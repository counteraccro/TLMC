{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/FamilleController.php'|file_link(0) }}">src/Controller/FamilleController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/famille/index.html.twig'|file_link(0) }}">templates/famille/index.html.twig</a></code></li>
    </ul>
    
    {% for famille in familles %}
	
		<div>
			<hr />
			Bloc Famille <br />
			Nom : {{ famille.nom }} <br />
			Parenté : {{ famille.lienFamille }} <br />
			Adresse : {{ famille.familleAdresse.numeroVoie }} - {{ famille.familleAdresse.voie }} - {{ famille.familleAdresse.ville }} <br />
			
			--- Patient : <br />
			--- Prenom : {{ famille.patient.prenom }} - {{ famille.patient.nom }}  <br />
		</div>
	
	{% endfor %}
    
</div>
{% endblock %}
