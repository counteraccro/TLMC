{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/ReponseController.php'|file_link(0) }}">src/Controller/ReponseController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/reponse/index.html.twig'|file_link(0) }}">templates/reponse/index.html.twig</a></code></li>
    </ul>
</div>


<div>
	
	{% for reponse in reponses %}
		
		Questionnaire ID : {{ reponse.question.questionnaire.id }}
		<br />
		 
		Question ID :  
	    {{ reponse.question.id }} :
		<br />
		
		Réponse :
        {{ reponse.valeur }}
        <br />
        
	   	Date :
	   	{{ reponse.date |date("m/d/Y H:i") }}
	   	<br />
	   	
		Actif ?
		{{ reponse.disabled }}
		<br />

	   	<hr>
	{% endfor %}
</div>
{% endblock %}
