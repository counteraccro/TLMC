{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/MembreController.php'|file_link(0) }}">src/Controller/MembreController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/membre/index.html.twig'|file_link(0) }}">templates/membre/index.html.twig</a></code></li>
    </ul>
</div>

<div>
	
	{% for membre in membres %}
		Nom :
	    {{ membre.nom }} {{ membre.prenom }}
		<br /> Fonction :
	    {{ membre.fonction }}
		
		<br />Dans Annuaire ?
	    {{ membre.annuaire }}
		
		<br />Décideur ?
	    {{ membre.decideur }}
		
		
		<br />Etablissement : 
		{{ membre.etablissement.nom }}
		
		{% if membre.specialite != null %}
			<br />Specialite : 
		    {{ membre.specialite.service }}
		{% endif %}
		
		<br />Signature :
	    {{ membre.signature }}
		<br />
		<hr>
	{% endfor %}
	

</div>
{% endblock %}
